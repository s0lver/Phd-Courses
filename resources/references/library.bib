file = {:C$\backslash$:/Users/Rafael/Dropbox/cinvestav/doctorado/resources/2014 - Haykin, Fuster - On Cognitive Dynamic Systems Cognitive Neuroscience and Engineering Learning From Each Other.pdf:pdf},
isbn = {0018-9219 VO - 102},
issn = {0018-9219},
journal = {Proceedings of the IEEE},
keywords = {Attention,cognition,control,entropic state,intelligence,memory,perception,pre-adaptation,prediction,risk control,self-organization,system stability},
