booktitle = {2014 IEEE International Conference on Pervasive Computing and Communications (PerCom)},
doi = {10/8rb},
file = {:C$\backslash$:/Users/Rafael/Dropbox/cinvestav/doctorado/resources/2014 - Vergara-Laurens, Mendez, Labrador - Privacy, quality of information, and energy consumption in Participatory Sensing systems.pdf:pdf},
